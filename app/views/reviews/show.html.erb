<h1>Author: <%= @review.author %></h1>
<h2>Rating <%= @review.rating %></h2>

<h4>Review: <%= @review.content_body %></h4>

<p><%= link_to "Edit", edit_product_review_path(@review, @product) %></p>
<p><%= link_to "Delete", product_review_path(@review, @product),
                         :data => {:confirm => "Are you sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to product", product_path %></p>
